{
	"extends": "klasa",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"globals": {
		"HTMLCanvasElement": false
	},
	"rules": {
        "max-len": "off",
		"operator-linebreak": ["error", "before", { "overrides": { "+": "after", "=": "after" } }],
		"curly": ["error", "multi-or-nest", "consistent"],
		"id-length": "off",
		"no-bitwise": ["error", { "int32Hint": true }],
		"no-cond-assign": "off"
	}
}
